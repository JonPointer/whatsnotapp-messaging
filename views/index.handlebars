
<section class="container-md">
        <div class="row">
            <!-- Left section for refresh and users list  -->
            <aside class="col-md-3 bg-light">
                <!-- Refresh Button  -->
                <!-- id = refresh-button for JS code that calls route -->
                {{!-- <form class="container-md rounded-top" id="userForm" action="">
	                <input id="username" autocomplete="off" placeholder="Enter Your Name" /><button>Send</button>
                </form> --}}
                <li class="list-group-item"><button type="button"
                                class="leftBtns btn btn-primary mb-1 mx-auto" id="refresh-button">Refresh Display</button></li>
                <!-- Section for choosing which messages to display  -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Filter Msgs From:</h5>
                    </div>
                    <!-- List of buttons -->
                    <ul class="list-group mx-auto w-100">
                            {{#each users }}
                                <li>
                                    <button onclick='userDisplay(this)' value={{id}} class="leftBtns btn btn-primary mb-1 mx-auto">{{username}}</button>
                                </li>
                            {{/each}}  
                    </ul>
                </div>
            </aside>
            <!-- Right section for display of messages  -->
            <section class="col-md-9">
                <div class="panel panel-primary" id="result_panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Messages</h3>
                    </div>
                    <div class="panel-body">
                        <ul id="messages">
                            {{#each values }}
                                <li>
                                    {{username}}: {{body}}
                                </li>
                            {{/each}}         
                        </ul>  
                    </div>
                </div>
            </section>
        </div>
    </section>




    
